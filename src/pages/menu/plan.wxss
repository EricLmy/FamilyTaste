/* pages/menu/plan.wxss */
page {
  background-color: #f8f8f8;
}

.container {
  padding-bottom: 120rpx; /* 为底部操作栏留出空间 */
}

/* 日期选择区域 */
.date-picker-container {
  background-color: #fff;
  padding: 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.05);
}

.date-picker {
  flex: 1;
}

.selected-date {
  display: flex;
  align-items: center;
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.arrow-icon {
  width: 24rpx;
  height: 24rpx;
  margin-left: 10rpx;
}

.date-tabs {
  display: flex;
  margin-left: 20rpx;
}

.date-tab {
  padding: 12rpx 30rpx;
  font-size: 28rpx;
  color: #666;
  background-color: #f5f5f5;
  border-radius: 30rpx;
  margin-left: 10rpx;
}

.date-tab.active {
  background-color: #FF8C69;
  color: #fff;
}

/* 餐次区域样式 */
.meal-section {
  background-color: #fff;
  margin: 20rpx 0;
  border-radius: 12rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.05);
}

.meal-header {
  padding: 20rpx 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1rpx solid #f0f0f0;
}

.meal-title {
  display: flex;
  align-items: center;
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
}

.meal-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 10rpx;
}

.add-dish {
  display: flex;
  align-items: center;
  font-size: 26rpx;
  color: #FF8C69;
  padding: 8rpx 16rpx;
  border: 1rpx solid #FF8C69;
  border-radius: 30rpx;
}

.add-dish image {
  width: 24rpx;
  height: 24rpx;
  margin-right: 6rpx;
}

/* 菜品列表 */
.dish-list {
  padding: 0 30rpx;
}

.plan-dish-item {
  display: flex;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.dish-thumb {
  width: 120rpx;
  height: 120rpx;
  border-radius: 8rpx;
  margin-right: 20rpx;
}

.dish-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.dish-name {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 10rpx;
}

.dish-portion {
  font-size: 24rpx;
  color: #666;
}

.dish-actions {
  display: flex;
  align-items: center;
}

.action-edit, .action-delete {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.action-edit image, .action-delete image {
  width: 36rpx;
  height: 36rpx;
}

/* 空菜单状态 */
.empty-meal {
  padding: 40rpx 0;
  text-align: center;
  font-size: 26rpx;
  color: #999;
}

/* 周计划样式 */
.week-tabs {
  display: flex;
  background-color: #fff;
  padding: 20rpx 0;
  overflow-x: auto;
  white-space: nowrap;
}

.week-tab {
  padding: 16rpx 30rpx;
  font-size: 28rpx;
  color: #666;
  display: inline-block;
  border-bottom: 4rpx solid transparent;
}

.week-tab.active {
  color: #FF8C69;
  border-bottom-color: #FF8C69;
  font-weight: bold;
}

.week-day-plan {
  padding: 20rpx;
}

/* 底部操作栏 */
.bottom-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 100rpx;
  background-color: #fff;
  display: flex;
  padding: 0 30rpx 30rpx;
  border-top: 1rpx solid #f0f0f0;
}

.btn-secondary, .btn-primary {
  flex: 1;
  height: 80rpx;
  border-radius: 40rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 28rpx;
}

.btn-secondary {
  margin-right: 20rpx;
  background-color: #f5f5f5;
  color: #666;
}

.btn-primary {
  background-color: #FF8C69;
  color: #fff;
}