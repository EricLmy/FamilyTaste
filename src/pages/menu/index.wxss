/* pages/menu/index.wxss */

.container {
  background-color: #f8f8f8;
  min-height: 100vh;
}

/* 搜索区域样式 */
.search-container {
  background-color: #ffffff;
  padding: 30rpx;
  position: sticky;
  top: 0;
  z-index: 10;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.search-box {
  display: flex;
  align-items: center;
  background-color: #f5f5f5;
  border-radius: 36rpx;
  padding: 15rpx 25rpx;
  position: relative;
  border: 1rpx solid #eee;
}

.search-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 15rpx;
}

.search-box input {
  flex: 1;
  height: 60rpx;
  font-size: 28rpx;
}

.clear-icon {
  padding: 10rpx;
}

.clear-icon image {
  width: 32rpx;
  height: 32rpx;
}

/* 分类标签样式 */
.category-container {
  background-color: #ffffff;
  padding: 20rpx 0;
  margin-bottom: 20rpx;
  border-bottom: 1px solid #f0f0f0;
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.03);
}

.category-scroll {
  white-space: nowrap;
  width: 100%;
}

.category-list {
  display: inline-flex;
  padding: 0 20rpx;
}

.category-item {
  padding: 12rpx 24rpx;
  font-size: 28rpx;
  color: #666;
  margin-right: 20rpx;
  border-radius: 36rpx;
  background-color: #f5f5f5;
  display: flex;
  align-items: center;
  transition: all 0.3s;
}

.category-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 8rpx;
}

.category-item.active {
  color: #ffffff;
  background-color: #FF8C69;
  box-shadow: 0 4rpx 8rpx rgba(255, 140, 105, 0.2);
  transform: translateY(-2rpx);
}

/* 推荐菜品区域样式 */
.recommend-container {
  background-color: #ffffff;
  padding: 30rpx 0 20rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.03);
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  padding: 0 30rpx;
  margin-bottom: 20rpx;
  position: relative;
}

.section-title:before {
  content: '';
  position: absolute;
  left: 30rpx;
  top: -6rpx;
  width: 60rpx;
  height: 6rpx;
  background-color: #FF8C69;
  border-radius: 3rpx;
}

.recommend-scroll {
  width: 100%;
}

.recommend-list {
  display: inline-flex;
  padding: 0 20rpx;
}

.recommend-item {
  width: 200rpx;
  margin-right: 20rpx;
  background-color: #ffffff;
  border-radius: 12rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.recommend-image {
  width: 200rpx;
  height: 200rpx;
}

.recommend-image image {
  width: 100%;
  height: 100%;
}

.recommend-info {
  padding: 12rpx;
}

.recommend-name {
  font-size: 26rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.recommend-rating {
  display: flex;
  align-items: center;
  font-size: 22rpx;
  color: #FF8C69;
}

.recommend-rating image {
  width: 24rpx;
  height: 24rpx;
  margin-right: 4rpx;
}

/* 筛选条件样式 */
.filter-container {
  display: flex;
  background-color: #ffffff;
  padding: 20rpx 30rpx;
  margin-bottom: 20rpx;
  border-bottom: 1px solid #f0f0f0;
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.03);
}

.filter-item {
  font-size: 26rpx;
  color: #666;
  margin-right: 40rpx;
  padding: 8rpx 0;
  position: relative;
  transition: all 0.3s;
}

.filter-item.active {
  color: #FF8C69;
  font-weight: bold;
}

.filter-item.active:after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 4rpx;
  background-color: #FF8C69;
  border-radius: 2rpx;
}

/* 菜品列表样式 */
.dish-list {
  padding: 20rpx 30rpx;
}

.dish-item {
  display: flex;
  margin-bottom: 30rpx;
  background-color: #ffffff;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
  transition: all 0.3s;
}

.dish-item:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.05);
}

.dish-image {
  position: relative;
  width: 220rpx;
  height: 220rpx;
}

.dish-image image {
  width: 100%;
  height: 100%;
}

.dish-favorite {
  position: absolute;
  top: 10rpx;
  right: 10rpx;
  background-color: rgba(255, 255, 255, 0.8);
  border-radius: 50%;
  width: 50rpx;
  height: 50rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.1);
}

.dish-favorite image {
  width: 36rpx;
  height: 36rpx;
}

.dish-info {
  flex: 1;
  padding: 20rpx;
  position: relative;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.dish-name {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 12rpx;
  color: #333;
}

.dish-desc {
  font-size: 24rpx;
  color: #999;
  line-height: 1.4;
  margin-bottom: 20rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.dish-meta {
  display: flex;
  font-size: 22rpx;
  color: #666;
}

.dish-difficulty, .dish-time, .dish-rating {
  display: flex;
  align-items: center;
  margin-right: 20rpx;
}

.dish-meta image {
  width: 26rpx;
  height: 26rpx;
  margin-right: 6rpx;
}

.dish-rating {
  color: #FF8C69;
  font-weight: bold;
}

/* 空状态样式 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 0;
  color: #999;
  font-size: 28rpx;
}

.empty-state image {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 30rpx;
  opacity: 0.6;
}

.empty-tips {
  font-size: 24rpx;
  color: #bbb;
  margin-top: 10rpx;
}

/* 悬浮按钮样式 */
.float-button {
  position: fixed;
  right: 30rpx;
  bottom: 60rpx;
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  background-color: #FF8C69;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 20rpx rgba(255, 140, 105, 0.4);
  transition: all 0.3s;
  z-index: 20;
}

.float-button:active {
  transform: scale(0.95);
  box-shadow: 0 2rpx 10rpx rgba(255, 140, 105, 0.3);
}

.float-button image {
  width: 50rpx;
  height: 50rpx;
}