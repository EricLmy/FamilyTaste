/* pages/menu/detail.wxss */
page {
  background-color: #f8f8f8;
}

.container {
  padding-bottom: 120rpx; /* 为底部操作栏留出空间 */
}

/* 顶部图片轮播 */
.dish-image-swiper {
  width: 100%;
  height: 480rpx;
}

.dish-image {
  width: 100%;
  height: 100%;
}

/* 菜品标题样式 */
.dish-header {
  padding: 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  background-color: #fff;
}

.dish-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.favorite-btn {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.favorite-btn image {
  width: 40rpx;
  height: 40rpx;
}

/* 菜品基本信息 */
.dish-info-section {
  display: flex;
  padding: 20rpx 30rpx;
  background-color: #fff;
  border-bottom: 1rpx solid #f0f0f0;
}

.dish-info-item {
  display: flex;
  align-items: center;
  margin-right: 40rpx;
  font-size: 24rpx;
  color: #666;
}

.dish-info-item image {
  width: 32rpx;
  height: 32rpx;
  margin-right: 8rpx;
}

/* 菜品描述 */
.dish-description {
  padding: 30rpx;
  background-color: #fff;
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
  border-bottom: 1rpx solid #f0f0f0;
}

/* 标签样式 */
.dish-tags {
  display: flex;
  flex-wrap: wrap;
  padding: 20rpx 30rpx;
  background-color: #fff;
  border-bottom: 1rpx solid #f0f0f0;
}

.tag-item {
  padding: 8rpx 20rpx;
  background-color: #f0f0f0;
  color: #666;
  font-size: 22rpx;
  border-radius: 30rpx;
  margin-right: 20rpx;
  margin-bottom: 10rpx;
}

/* 选项卡样式 */
.tab-container {
  margin-top: 20rpx;
  background-color: #fff;
}

.tab-bar {
  display: flex;
  border-bottom: 1rpx solid #f0f0f0;
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: 24rpx 0;
  font-size: 28rpx;
  color: #666;
  position: relative;
}

.tab-item.active {
  color: #FF8C69;
  font-weight: bold;
}

.tab-item.active:after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 60rpx;
  height: 6rpx;
  background-color: #FF8C69;
  border-radius: 3rpx;
}

/* 食材列表样式 */
.ingredients-list {
  padding: 30rpx;
}

.ingredient-header {
  display: flex;
  justify-content: space-between;
  padding-bottom: 20rpx;
  margin-bottom: 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
  font-weight: bold;
  color: #333;
}

.ingredient-title {
  flex: 2;
}

.ingredient-amount {
  flex: 1;
  text-align: right;
}

.ingredient-item {
  display: flex;
  justify-content: space-between;
  padding: 16rpx 0;
  font-size: 28rpx;
  border-bottom: 1rpx dashed #f0f0f0;
}

.ingredient-name {
  flex: 2;
  color: #333;
}

.ingredient-quantity {
  flex: 1;
  text-align: right;
  color: #666;
}

/* 步骤列表样式 */
.steps-list {
  padding: 30rpx;
}

.step-item {
  display: flex;
  margin-bottom: 40rpx;
}

.step-number {
  width: 60rpx;
  height: 60rpx;
  background-color: #FF8C69;
  color: #fff;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 30rpx;
  margin-right: 20rpx;
  flex-shrink: 0;
}

.step-content {
  flex: 1;
}

.step-text {
  font-size: 28rpx;
  color: #333;
  line-height: 1.6;
  margin-bottom: 20rpx;
}

.step-image {
  width: 100%;
  height: 320rpx;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
}

.step-time {
  font-size: 24rpx;
  color: #999;
}

/* 营养列表样式 */
.nutrition-list {
  padding: 30rpx;
}

.nutrition-item {
  display: flex;
  justify-content: space-between;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
  font-size: 28rpx;
}

.nutrition-item text:first-child {
  color: #333;
}

.nutrition-item text:last-child {
  color: #666;
}

/* 底部操作栏样式 */
.bottom-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 100rpx;
  background-color: #fff;
  display: flex;
  padding: 0 30rpx 30rpx;
  border-top: 1rpx solid #f0f0f0;
}

.btn-secondary, .btn-primary {
  flex: 1;
  height: 80rpx;
  border-radius: 40rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 28rpx;
}

.btn-secondary {
  margin-right: 20rpx;
  background-color: #f5f5f5;
  color: #666;
}

.btn-primary {
  background-color: #FF8C69;
  color: #fff;
}