/**index.wxss**/
.container {
  padding: 30rpx;
}

/* 头部样式 */
.header {
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}

.date {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.user-info {
  display: flex;
  align-items: center;
}

.user-avatar {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  margin-right: 10rpx;
}

.user-name {
  font-size: 28rpx;
  color: #666;
}

.auth-btn {
  font-size: 26rpx;
  padding: 8rpx 20rpx;
  background-color: #FF8C69;
  color: white;
  border-radius: 30rpx;
  line-height: 1.5;
}

/* 2x2功能入口网格 */
.entrances-grid {
  width: 100%;
  margin-bottom: 40rpx;
}

.entrance-row {
  display: flex;
  justify-content: space-between;
  margin-bottom: 30rpx;
}

.entrance-row:last-child {
  margin-bottom: 0;
}

.entrance-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 48%;
  background-color: #f8f8f8;
  border-radius: 12rpx;
  padding: 40rpx 0;
  box-shadow: 0 2rpx 10rpx 0 rgba(0, 0, 0, 0.05);
  transition: all 0.3s;
}

.entrance-item:active {
  background-color: #f0f0f0;
  transform: scale(0.98);
}

.entrance-icon {
  width: 100rpx;
  height: 100rpx;
  margin-bottom: 20rpx;
}

.entrance-name {
  font-size: 30rpx;
  color: #333;
  font-weight: 500;
}

/* 今日菜单卡片 */
.today-menu {
  width: 100%;
  margin-bottom: 40rpx;
}

/* 餐次区域 */
.meal-section {
  margin-bottom: 30rpx;
}

.meal-section:last-child {
  margin-bottom: 0;
}

.meal-header {
  margin-bottom: 20rpx;
}

.meal-list {
  display: flex;
  flex-wrap: wrap;
}

.meal-item {
  width: 150rpx;
  margin-right: 20rpx;
  margin-bottom: 20rpx;
  text-align: center;
}

.meal-image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 8rpx;
  margin-bottom: 10rpx;
}

.meal-name {
  font-size: 24rpx;
  color: #333;
  display: block;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

/* 空菜单提示 */
.empty-tip {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 40rpx 0;
}

.empty-icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 20rpx;
}

.empty-tip text {
  font-size: 28rpx;
  color: #999;
  margin-bottom: 30rpx;
}

.add-menu-btn {
  width: 80%;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 30rpx;
}

/* 卡片通用样式 */
.card {
  background-color: white;
  border-radius: 12rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 10rpx 0 rgba(0, 0, 0, 0.05);
}

.title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

/* 餐次类型样式 */
.meal-type {
  font-size: 28rpx;
  font-weight: bold;
  padding: 8rpx 24rpx;
  border-radius: 30rpx;
  display: inline-block;
}

.meal-breakfast {
  background-color: #FFE4B5;
  color: #FF8C00;
}

.meal-lunch {
  background-color: #E0FFFF;
  color: #00CED1;
}

.meal-dinner {
  background-color: #E6E6FA;
  color: #6A5ACD;
} 