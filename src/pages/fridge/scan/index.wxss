.scan-page {
  height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  background: #f8f8f8;
}

.scan-result {
  width: 90%;
  margin: 20rpx auto;
  background: #fff;
  border-radius: 12rpx;
  padding: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.1);
}

.food-info {
  display: flex;
  padding: 20rpx;
}

.food-image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 8rpx;
  margin-right: 20rpx;
}

.food-details {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.food-name {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.food-spec,
.food-date,
.food-expire {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 8rpx;
}

.action-buttons {
  display: flex;
  justify-content: space-between;
  margin-top: 30rpx;
  padding: 0 20rpx;
}

.btn-rescan,
.btn-confirm {
  width: 45%;
}

.btn-rescan {
  background: #f0f0f0;
  color: #333;
}

.scan-tip {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  color: #fff;
  font-size: 32rpx;
  text-shadow: 0 1px 2px rgba(0,0,0,0.5);
}

.loading {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  color: #fff;
  font-size: 32rpx;
  text-shadow: 0 1px 2px rgba(0,0,0,0.5);
} 