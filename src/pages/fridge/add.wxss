/* pages/fridge/add.wxss */
.container {
  padding: 30rpx;
  background-color: #f8f8f8;
}

.form-container {
  width: 100%;
  background-color: #fff;
  border-radius: 12rpx;
  padding: 20rpx;
  box-shadow: 0 2rpx 10rpx 0 rgba(0, 0, 0, 0.05);
}

.form-section {
  margin-bottom: 30rpx;
}

.form-section-title {
  font-size: 28rpx;
  color: #999;
  margin-bottom: 20rpx;
  padding-left: 10rpx;
  border-left: 4rpx solid #FF8C69;
}

.form-item {
  margin-bottom: 25rpx;
  width: 100%;
}

.form-label {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 15rpx;
}

.form-input {
  position: relative;
  width: 100%;
}

.form-input input, .form-input textarea, .picker-view {
  width: 100%;
  height: 90rpx;
  background-color: #f8f8f8;
  border-radius: 8rpx;
  padding: 0 20rpx;
  font-size: 30rpx;
  box-sizing: border-box;
  border: 1px solid #eee;
}

.form-input textarea {
  height: 180rpx;
  padding: 20rpx;
  line-height: 1.5;
}

.picker-view {
  display: flex;
  align-items: center;
}

.date-picker {
  display: flex;
  align-items: center;
}

.date-picker-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 10rpx;
}

.arrow-icon {
  width: 30rpx;
  height: 30rpx;
  position: absolute;
  right: 20rpx;
  top: 50%;
  transform: translateY(-50%);
}

.amount-input {
  display: flex;
  align-items: center;
}

.amount-input input {
  flex: 1;
  margin-right: 20rpx;
}

.unit-picker {
  width: 150rpx;
  height: 90rpx;
  background-color: #f8f8f8;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 20rpx;
  font-size: 30rpx;
  border: 1px solid #eee;
}

.buttons {
  display: flex;
  justify-content: space-between;
  width: 100%;
  margin-top: 40rpx;
}

.buttons button {
  width: 45%;
  height: 90rpx;
  line-height: 90rpx;
  font-size: 32rpx;
  border-radius: 45rpx;
}

.btn-primary {
  background-color: #FF8C69;
  color: white;
}

.btn-secondary {
  background-color: #f5f5f5;
  color: #666;
  border: 1px solid #ddd;
}

.category-selector {
  display: flex;
  flex-wrap: wrap;
}

.category-item {
  width: 22%;
  height: 70rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #f8f8f8;
  border-radius: 8rpx;
  margin-right: 3%;
  margin-bottom: 15rpx;
  font-size: 26rpx;
  border: 1px solid #eee;
}

.category-item:nth-child(4n) {
  margin-right: 0;
}

.category-item.active {
  background-color: #FFE4D6;
  color: #FF8C69;
  border: 1px solid #FF8C69;
}

.location-selector {
  display: flex;
  justify-content: space-between;
}

.location-item {
  width: 32%;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #f8f8f8;
  border-radius: 8rpx;
  font-size: 28rpx;
  border: 1px solid #eee;
}

.location-item.active {
  background-color: #FFE4D6;
  color: #FF8C69;
  border: 1px solid #FF8C69;
}

.barcode-input input {
  background-color: #f0f0f0;
  color: #999;
}