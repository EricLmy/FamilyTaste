/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 30rpx;
  box-sizing: border-box;
}

/* 通用颜色 */
.primary-color {
  color: #FF8C69;
}
.primary-bg {
  background-color: #FF8C69;
}
.secondary-color {
  color: #FFB284;
}
.secondary-bg {
  background-color: #FFB284;
}

/* 通用卡片样式 */
.card {
  width: 100%;
  background-color: #FFFFFF;
  border-radius: 12rpx;
  padding: 24rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 2rpx 10rpx 0 rgba(0, 0, 0, 0.05);
}

/* 通用标题样式 */
.title {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
}
.subtitle {
  font-size: 30rpx;
  font-weight: bold;
  margin-bottom: 16rpx;
}

/* 通用按钮样式 */
.btn-primary {
  background-color: #FF8C69;
  color: white;
  border: none;
  border-radius: 6rpx;
}
.btn-secondary {
  background-color: #fff;
  color: #FF8C69;
  border: 1rpx solid #FF8C69;
  border-radius: 6rpx;
}

/* 网格布局 */
.grid {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}
.grid-item {
  width: 48%;
  margin-bottom: 20rpx;
}

/* 通用列表样式 */
.list {
  width: 100%;
}
.list-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #F0F0F0;
}
.list-item:last-child {
  border-bottom: none;
}

/* 标签样式 */
.tag {
  display: inline-block;
  padding: 6rpx 12rpx;
  font-size: 24rpx;
  border-radius: 6rpx;
  margin-right: 10rpx;
  margin-bottom: 10rpx;
}
.tag-primary {
  background-color: #FF8C69;
  color: white;
}
.tag-secondary {
  background-color: #FFE4D6;
  color: #FF8C69;
}

/* 餐次样式 */
.meal-type {
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 26rpx;
  margin-right: 10rpx;
}
.meal-breakfast {
  background-color: #FFD700;
  color: #8B4513;
}
.meal-lunch {
  background-color: #FF7F50;
  color: white;
}
.meal-dinner {
  background-color: #4169E1;
  color: white;
}
.meal-snack {
  background-color: #90EE90;
  color: #006400;
} 